# ─── Database ────────────────────────────────────────────
# Local dev (Docker)
DATABASE_URL="postgresql://lpf_user:lpf_password@localhost:5433/lpf_db"
# Railway: use the Railway PostgreSQL plugin URL
# DATABASE_URL="postgresql://postgres:PASSWORD@HOST:PORT/railway"

# ─── Redis ───────────────────────────────────────────────
# Local dev (Docker)
REDIS_URL="redis://localhost:6379"
# Railway: use the Railway Redis plugin URL
# REDIS_URL="redis://:PASSWORD@HOST:PORT"

# ─── JWT ─────────────────────────────────────────────────
JWT_SECRET="change-me-to-a-long-random-string-in-production"
JWT_EXPIRES_IN="7d"

# ─── API ─────────────────────────────────────────────────
API_PORT=5001
NODE_ENV=development

# Railway production URL — set after first deploy
# PUBLIC_API_URL="https://lpf-api-production.up.railway.app"

# ─── Email (Resend) ───────────────────────────────────────
# Get free API key at https://resend.com (3000 emails/month free)
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"
# ADMIN_EMAIL="your@email.com"

# ─── PayOS (Vietnam payment) ─────────────────────────────
# Register at https://payos.vn — get keys from dashboard
# PAYOS_CLIENT_ID="your-client-id"
# PAYOS_API_KEY="your-api-key"
# PAYOS_CHECKSUM_KEY="your-checksum-key"

# ─── Deployment integrations ─────────────────────────────
# VERCEL_TOKEN="your-vercel-token"
# NETLIFY_TOKEN="your-netlify-token"
