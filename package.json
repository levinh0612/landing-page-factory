{
  "name": "landing-page-factory",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w packages/api",
    "dev:dashboard": "npm run dev -w packages/dashboard",
    "dev": "npm run dev:api & npm run dev:dashboard",
    "build:shared": "npm run build -w packages/shared",
    "build:api": "npm run build -w packages/api",
    "build:dashboard": "npm run build -w packages/dashboard",
    "build": "npm run build:shared && npm run build:api && npm run build:dashboard",
    "db:migrate": "npm run db:migrate -w packages/api",
    "db:seed": "npm run db:seed -w packages/api",
    "db:studio": "npm run db:studio -w packages/api",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0"
  }
}
