generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

enum ProjectStatus {
  DRAFT
  IN_PROGRESS
  READY
  DEPLOYED
  ARCHIVED
}

enum DeployTarget {
  VERCEL
  NETLIFY
  CLOUDFLARE
  CUSTOM
}

enum TemplateStatus {
  DRAFT
  ACTIVE
  DEPRECATED
}

enum DeploymentStatus {
  PENDING
  BUILDING
  SUCCESS
  FAILED
  ROLLED_BACK
}

enum HealthCheckStatus {
  HEALTHY
  DEGRADED
  DOWN
  UNKNOWN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  role         UserRole @default(EDITOR)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  activityLogs ActivityLog[]

  @@map("users")
}

model Template {
  id           String         @id @default(uuid())
  name         String
  slug         String         @unique
  category     String
  description  String         @default("")
  previewUrl   String?        @map("preview_url")
  thumbnailUrl String?        @map("thumbnail_url")
  techStack    String[]       @map("tech_stack")
  plugins      String[]
  status       TemplateStatus @default(DRAFT)
  configSchema Json?          @map("config_schema")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  projects Project[]

  @@map("templates")
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  company   String?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  projects Project[]

  @@map("clients")
}

model Project {
  id           String        @id @default(uuid())
  clientId     String        @map("client_id")
  templateId   String        @map("template_id")
  name         String
  slug         String        @unique
  domain       String?
  status       ProjectStatus @default(DRAFT)
  deployTarget DeployTarget? @map("deploy_target")
  deployUrl    String?       @map("deploy_url")
  config       Json?
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  client       Client        @relation(fields: [clientId], references: [id])
  template     Template      @relation(fields: [templateId], references: [id])
  deployments  Deployment[]
  healthChecks HealthCheck[]
  activityLogs ActivityLog[]

  @@map("projects")
}

model Deployment {
  id        String           @id @default(uuid())
  projectId String           @map("project_id")
  version   String
  status    DeploymentStatus @default(PENDING)
  platform  String
  deployUrl String?          @map("deploy_url")
  logs      String?
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id])

  @@map("deployments")
}

model HealthCheck {
  id             String            @id @default(uuid())
  projectId      String            @map("project_id")
  status         HealthCheckStatus @default(UNKNOWN)
  responseTimeMs Int?              @map("response_time_ms")
  sslExpiry      DateTime?         @map("ssl_expiry")
  checkedAt      DateTime          @default(now()) @map("checked_at")

  project Project @relation(fields: [projectId], references: [id])

  @@map("health_checks")
}

model ActivityLog {
  id        String   @id @default(uuid())
  projectId String?  @map("project_id")
  userId    String   @map("user_id")
  action    String
  details   String?
  createdAt DateTime @default(now()) @map("created_at")

  project Project? @relation(fields: [projectId], references: [id])
  user    User     @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}
