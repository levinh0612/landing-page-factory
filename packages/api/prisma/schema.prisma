generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

enum ProjectStatus {
  DRAFT
  IN_PROGRESS
  READY
  DEPLOYED
  ARCHIVED
}

enum DeployTarget {
  VERCEL
  NETLIFY
  CLOUDFLARE
  CUSTOM
}

enum TemplateStatus {
  DRAFT
  ACTIVE
  DEPRECATED
}

enum DeploymentStatus {
  PENDING
  BUILDING
  SUCCESS
  FAILED
  ROLLED_BACK
}

enum HealthCheckStatus {
  HEALTHY
  DEGRADED
  DOWN
  UNKNOWN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  CHANGES_REQUESTED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum ContactStatus {
  NEW
  READ
  REPLIED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELLED
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum CommentStatus {
  PENDING
  APPROVED
  SPAM
  TRASH
}

enum SettingType {
  STRING
  BOOLEAN
  NUMBER
  JSON
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  role         UserRole @default(EDITOR)
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  activityLogs     ActivityLog[]
  templateVersions TemplateVersion[]
  previewTokens    PreviewToken[]
  comments         Comment[]
  deployments      Deployment[]

  @@map("users")
}

model Template {
  id           String         @id @default(uuid())
  name         String
  slug         String         @unique
  category     String
  description  String         @default("")
  previewUrl   String?        @map("preview_url")
  thumbnailUrl String?        @map("thumbnail_url")
  techStack    String[]       @map("tech_stack")
  plugins      String[]
  status       TemplateStatus @default(DRAFT)
  configSchema Json?          @map("config_schema")
  version      Int            @default(0)
  filePath     String?        @map("file_path")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  projects Project[]
  versions TemplateVersion[]

  @@map("templates")
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  company   String?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  projects Project[]

  @@map("clients")
}

model Project {
  id             String         @id @default(uuid())
  clientId       String         @map("client_id")
  templateId     String         @map("template_id")
  name           String
  slug           String         @unique
  domain         String?
  status         ProjectStatus  @default(DRAFT)
  deployTarget   DeployTarget?  @map("deploy_target")
  deployUrl      String?        @map("deploy_url")
  config         Json?
  approvalStatus ApprovalStatus @default(PENDING) @map("approval_status")
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")

  client        Client         @relation(fields: [clientId], references: [id])
  template      Template       @relation(fields: [templateId], references: [id])
  deployments   Deployment[]
  healthChecks  HealthCheck[]
  activityLogs  ActivityLog[]
  previewTokens PreviewToken[]
  comments      Comment[]
  bookings      Booking[]
  contacts      Contact[]
  payments      Payment[]

  @@map("projects")
}

model Deployment {
  id         String           @id @default(uuid())
  projectId  String           @map("project_id")
  version    String
  status     DeploymentStatus @default(PENDING)
  platform   String
  deployUrl  String?          @map("deploy_url")
  logs       String?
  deployedBy String?          @map("deployed_by")
  buildTime  Int?             @map("build_time")
  metadata   Json?
  createdAt  DateTime         @default(now()) @map("created_at")
  updatedAt  DateTime         @updatedAt @map("updated_at")

  project  Project @relation(fields: [projectId], references: [id])
  deployer User?   @relation(fields: [deployedBy], references: [id])

  @@map("deployments")
}

model HealthCheck {
  id             String            @id @default(uuid())
  projectId      String            @map("project_id")
  status         HealthCheckStatus @default(UNKNOWN)
  responseTimeMs Int?              @map("response_time_ms")
  sslExpiry      DateTime?         @map("ssl_expiry")
  checkedAt      DateTime          @default(now()) @map("checked_at")

  project Project @relation(fields: [projectId], references: [id])

  @@map("health_checks")
}

model ActivityLog {
  id         String   @id @default(uuid())
  projectId  String?  @map("project_id")
  userId     String   @map("user_id")
  action     String
  details    String?
  entityType String?  @map("entity_type")
  entityId   String?  @map("entity_id")
  createdAt  DateTime @default(now()) @map("created_at")

  project Project? @relation(fields: [projectId], references: [id])
  user    User     @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}

model TemplateVersion {
  id         String   @id @default(uuid())
  templateId String   @map("template_id")
  version    Int
  filePath   String   @map("file_path")
  fileCount  Int      @map("file_count") @default(0)
  fileSize   Int      @map("file_size") @default(0)
  uploadedBy String?  @map("uploaded_by")
  createdAt  DateTime @default(now()) @map("created_at")

  template Template @relation(fields: [templateId], references: [id])
  uploader User?    @relation(fields: [uploadedBy], references: [id])

  @@unique([templateId, version])
  @@map("template_versions")
}

model PreviewToken {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdBy String   @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id])
  creator User    @relation(fields: [createdBy], references: [id])

  @@map("preview_tokens")
}

model Comment {
  id         String   @id @default(uuid())
  projectId  String   @map("project_id")
  userId     String?  @map("user_id")
  authorName String   @map("author_name")
  content    String
  isClient   Boolean  @default(false) @map("is_client")
  createdAt  DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@map("comments")
}

// ─── Client-facing models (bookings, contacts, payments) ─────────────────────

model Booking {
  id          String        @id @default(uuid())
  projectId   String        @map("project_id")
  service     String
  petType     String        @map("pet_type")
  petName     String        @map("pet_name")
  ownerName   String        @map("owner_name")
  phone       String
  bookingDate DateTime      @map("booking_date")
  timeSlot    String        @map("time_slot")
  notes       String?
  status      BookingStatus @default(PENDING)
  emailSent   Boolean       @default(false) @map("email_sent")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  project  Project   @relation(fields: [projectId], references: [id])
  payments Payment[]

  @@map("bookings")
}

model Contact {
  id        String        @id @default(uuid())
  projectId String        @map("project_id")
  name      String
  email     String?
  phone     String?
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime      @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id])

  @@map("contacts")
}

model Payment {
  id         String        @id @default(uuid())
  projectId  String        @map("project_id")
  bookingId  String?       @map("booking_id")
  amount     Int
  status     PaymentStatus @default(PENDING)
  provider   String
  orderCode  String?       @unique @map("order_code")
  paymentUrl String?       @map("payment_url")
  paidAt     DateTime?     @map("paid_at")
  metadata   Json?
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")

  project Project  @relation(fields: [projectId], references: [id])
  booking Booking? @relation(fields: [bookingId], references: [id])

  @@map("payments")
}

// ─── Content Management Models ────────────────────────────────────────────────

model MediaFile {
  id           String   @id @default(uuid())
  filename     String
  originalName String   @map("original_name")
  mimeType     String   @map("mime_type")
  size         Int
  url          String
  alt          String?
  uploadedBy   String?  @map("uploaded_by")
  createdAt    DateTime @default(now()) @map("created_at")

  posts Post[] @relation("FeaturedImage")

  @@map("media_files")
}

model Post {
  id              String     @id @default(uuid())
  title           String
  slug            String     @unique
  content         String     @default("")
  excerpt         String?
  status          PostStatus @default(DRAFT)
  authorId        String?    @map("author_id")
  publishedAt     DateTime?  @map("published_at")
  featuredImageId String?    @map("featured_image_id")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  featuredImage MediaFile?        @relation("FeaturedImage", fields: [featuredImageId], references: [id])
  categories    PostsOnCategories[]
  tags          PostsOnTags[]
  siteComments  SiteComment[]

  @@map("posts")
}

model PostCategory {
  id          String @id @default(uuid())
  name        String
  slug        String @unique
  description String?

  posts PostsOnCategories[]

  @@map("post_categories")
}

model PostTag {
  id   String @id @default(uuid())
  name String
  slug String @unique

  posts PostsOnTags[]

  @@map("post_tags")
}

model PostsOnCategories {
  postId     String @map("post_id")
  categoryId String @map("category_id")

  post     Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  category PostCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([postId, categoryId])
  @@map("posts_on_categories")
}

model PostsOnTags {
  postId String @map("post_id")
  tagId  String @map("tag_id")

  post Post    @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  PostTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@map("posts_on_tags")
}

model SitePage {
  id        String     @id @default(uuid())
  title     String
  slug      String     @unique
  content   String     @default("")
  status    PostStatus @default(DRAFT)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  siteComments SiteComment[]

  @@map("site_pages")
}

model SiteComment {
  id         String        @id @default(uuid())
  postId     String?       @map("post_id")
  pageId     String?       @map("page_id")
  authorName String        @map("author_name")
  email      String
  content    String
  status     CommentStatus @default(PENDING)
  createdAt  DateTime      @default(now()) @map("created_at")

  post Post?     @relation(fields: [postId], references: [id], onDelete: SetNull)
  page SitePage? @relation(fields: [pageId], references: [id], onDelete: SetNull)

  @@map("site_comments")
}

model Setting {
  id      String      @id @default(uuid())
  key     String      @unique
  value   String      @default("")
  type    SettingType @default(STRING)
  section String      @default("general")
  label   String      @default("")

  @@map("settings")
}
